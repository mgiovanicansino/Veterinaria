@model Veterinaria.Models.Pet

@{
    ViewBag.Title = "Details";
}

<h2>Detalles</h2>
<div class="container">
    <div>
        <h4>Detalles</h4>
        <img src="~/Content/img/Mascotas/@Model.Img" />
        <hr />
        <dl class="dl-horizontal">
            <dt>


                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PetType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PetType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Age)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Age)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.BirthDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BirthDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Color)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Color)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Weigth)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Weigth)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Heigth)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Heigth)
            </dd>

        </dl>
    </div>
    <div>
        <div class="card">
            <div class="card-header">
                <div class="card-body">
                    <form action="@Url.Action("PictureUpdate","Pets")" method="post" enctype="multipart/form-data">
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            <input type="file" name="Picture" class="form-control-file" />
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>