@model IEnumerable<Veterinaria.Models.Veterinarian>

@{
    ViewBag.Title = "Veterinarios";
}
    <div class="container bg-light" style="margin-top:4px">
        <h2>Veterinarios</h2>

        <a class="btn btn-outline-primary" href="@Url.Action("Create","Veterinarians")"><span class="fas fa-plus"> Nuevo</span></a>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationUser.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>